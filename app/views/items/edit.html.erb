<div class="row">
	<div class="col-lg-4">
		 <%= form_for(@item) do |f| %>
            <%= f.label :image, '画像', class:"control-label" %>
            <%= f.attachment_field :image,class:"form-control" %>
            <%= f.label :title, 'タイトル', class:"control-label" %>
            <%= f.text_field :title,class:"form-control" %>
            <%= f.label :price, '価格', class:"control-label" %>
            <%= f.text_field :price,class:"form-control" %>
            <%= f.label :genre_id, 'ジャンル', class:"control-label" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :genre, {} ,{:class => "form-control"} %>
            <%= f.label :hardware_id, '機種', class:"control-label" %>
            <%= f.collection_select :hardware_id, Hardware.all, :id, :hardware, {} ,{:class => "form-control"} %>
            <%= f.label :label_id, '制作会社', class:"control-label" %>
            <%= f.collection_select :label_id, Label.all, :id, :label, {} ,{:class => "form-control"} %>
            <%= f.label :rating_id, 'レーティング', class:"control-label" %>
            <%= f.collection_select :rating_id, Rating.all, :id, :rating, {} ,{:class => "form-control"} %>
   			<%= f.label :amazon, 'アマゾンへのリンク', class:"control-label" %>
   			<%= f.text_field :amazon,class:"form-control" %>
   			<%= f.label :official, '公式サイトへのリンク', class:"control-label" %>
   			<%= f.text_field :official,class:"form-control" %>
            <%= f.label :sale_date, '発売日', class:"control-label" %>
            <%= f.text_field :sale_date,class:"form-control", placeholder: "YYYY/MM/DD" %>
                <br>
            <%= f.submit '編集完了', class:"btn btn-primary",style:"margin-bottom:10px" %>
        <% end %>
        <%= link_to admins_top_path do %><div class="btn btn-success" style="margin:5px 0 15px 0 ">管理画面へ戻る</div><% end %>
	</div>
</div>