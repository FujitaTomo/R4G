<div class="row">
	<div class="col-lg-3 col-lg-offset-1">
    	<table class="table table-bordered">
    		<thead>
    			<tr>
    				<th>管理者機能一覧</th>
    			</tr>
    		</thead>

    			<tbody>
	    			<tr>
	    				<td>
	    					<% if admin_signed_in? %>
								<%= link_to "ログアウト" ,destroy_admin_session_path  ,method: :delete %>
							<% else %>
								<%= link_to "ログイン" ,new_admin_session_path %>
							<% end %>
						</td>
					</tr>

		<% if admin_signed_in? %>
	    			<tr>
	    				<td><%= link_to "商品登録" ,new_item_path %>
						</td>
					</tr>
					<tr>
	    				<td><%= link_to "機種登録一覧" ,hardwares_path %>
						</td>
					</tr>
					<tr>
	    				<td><%= link_to "レーティング登録一覧" ,ratings_path %>
						</td>
					</tr>
					<tr>
	    				<td><%= link_to "ジャンル登録一覧" ,genres_path %>
						</td>
					</tr>
					<tr>
	    				<td><%= link_to "レーベル登録一覧" ,labels_path %>
						</td>
					</tr>
					<tr>
						<td><%= link_to "投票一覧" ,votes_path %></td>
					</td>
					<tr>
						<td><%= link_to "お問い合わせ一覧", contacts_path %></td>
					</tr>
		<% end %>
				</tbody>
		</table>
	</div>
<% if admin_signed_in? %>
	<div class="col-lg-3">
		<%= search_form_for @usearch do |f| %>
			<%= f.label :name_cont, "ユーザー名検索(空欄で全取得)",class:'control-label' %>
			<%= f.search_field :name_cont, class:"form-control" %>
			<%= f.submit '検索', class:"btn btn-primary",style:"margin-top:10px" %>
		<% end %>
	</div>
	<div class="col-lg-3">
		<%= search_form_for @search do |f| %>
		  <%= f.label :title_cont, "商品名検索(空欄で全取得)",class:'control-label' %>
		  <%= f.search_field :title_cont, class:"form-control" %>
		  <%= f.submit '検索', class:"btn btn-primary",style:"margin-top:10px" %>
		<% end %>
	</div>
<% end %>
</div>