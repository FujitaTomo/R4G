<div class="row">
    <div class="col-lg-4 col-lg-offset-4"style="border:1px solid #ddd;background-color: rgba( 0, 0, 0, 0.2 );">
      <section><h2>Log in</h2></section>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email,"メールアドレス", class:"control-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :password,"パスワード", class:"control-label" %><br />
            <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "admins/shared/links" %><br>
      </div>
    </div>
