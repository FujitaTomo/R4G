<div class="row">
	<div class="col-lg-6">
		<%= form_for [@item,@vote] do |f| %>
			<%= f.hidden_field :user_name, :value => current_user.name %>
			<%= f.label :comment, "コメント", class:"control-label" %>
			<%= f.text_field :comment,class:"form-control" %>
			<br>
			<%= f.label :favo, "良普悪",class:"control-label" %>
			<br>
			<label><%= f.radio_button :favo,"1" %> good </label>
			<label><%= f.radio_button :favo,"2" %> --- </label>
			<label><%= f.radio_button :favo,"3" %> bad</label>
			<br><br>
			<%= f.submit '投票', class:"btn btn-primary",style:"margin-bottom:10px" %>
		<% end %>
	</div>
</div>
